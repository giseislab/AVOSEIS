#!/usr/bin/perl

@infiles = @ARGV;
foreach $file (@infiles) {

	if ($file =~ /[0-9][0-9][0-9][0-9]_[0-9][0-9]_[0-9][0-9]/) {
		$yyyymmdd = substr($file, -10);
		$yyyy = substr($file, -10, 4);
		print "$file\n";
		open (FOUT, ">$file");
		print FOUT "#\n";
                print FOUT "schema rt1.0\n";
		print FOUT "dblocks none\n";
		print FOUT "dbpath /iwrun/op/db/archive/archive_$yyyy/{archive_$yyyymmdd}:/avort/oprun/dbmaster/{master_stations}\n";
		close(FOUT);
	}
	else
	{
		print "Overwrite $file ? ";
		$ans = <STDIN>;
		if ($ans =~ /y/) {
	        	open (FOUT, ">$file");
         		print FOUT "#\n";
                	print FOUT "schema t1.0\n";
                	print FOUT "dblocks none\n";
                	print FOUT "dbpath /iwrun/op/db/archive/{archive}:/avort/oprun/dbmaster/{master_stations}\n";
                	close(FOUT);
		}	
	}
}

